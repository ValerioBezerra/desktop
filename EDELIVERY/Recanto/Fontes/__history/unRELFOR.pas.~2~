var
  frmRELFOR: TfrmRELFOR;

implementation

{$R *.dfm}

uses unDM;

procedure TfrmRELFOR.Button1Click(Sender: TObject);
begin
   prepararSQL;
    if rdgFormato.ItemIndex = 0 then
       ppReport1.Print
    else
       ppReport2.Print;
end;

procedure TfrmRELFOR.Button2Click(Sender: TObject);
begin
   Close;
end;

procedure TfrmRELFOR.FormCreate(Sender: TObject);
begin
    cdspadrao := DataModule1.cdsCLIENTE;
end;

procedure TfrmRELFOR.prepararSQL;
begin
    cdspadrao.Close;
    cdspadrao.CommandText := 'select * from cliente';
    cdspadrao.Open;

    if rdgOrdem.ItemIndex = 0 then
       cdspadrao.CommandText := cdspadrao.CommandText + 'order by codigo_cli'
    else
      cdspadrao.CommandText := cdspadrao.CommandText + 'order by nome_cli';

end;

end.
